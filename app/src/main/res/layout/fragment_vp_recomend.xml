<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fragment_vp_recommend_head"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_vp_recommend_head_sdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="2"
            ></com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:id="@+id/fragment_vp_recommend_head_tv1"
            android:layout_gravity="bottom|right"
            android:textSize="@dimen/fragment_recommend_vp_textSize1"
            android:layout_margin="@dimen/fragment_recommend_vp_margin1"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_vp_recommend_head_tv2"
            android:layout_gravity="bottom|right"
            android:textSize="@dimen/fragment_recommend_vp_textSize2"
            android:layout_margin="@dimen/fragment_recommend_vp_margin2"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment_vp_recommend_mid"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_vp_recommend_mid_sdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="2"
            ></com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:id="@+id/fragment_vp_recommend_mid_tv1"
            android:layout_gravity="bottom|left"
            android:textSize="@dimen/fragment_recommend_vp_textSize1"
            android:layout_margin="@dimen/fragment_recommend_vp_margin1"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_vp_recommend_mid_tv2"
            android:layout_gravity="bottom|left"
            android:textSize="@dimen/fragment_recommend_vp_textSize2"
            android:layout_margin="@dimen/fragment_recommend_vp_margin2"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment_vp_recommend_foot"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_vp_recommend_foot_sdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="2"
            ></com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:id="@+id/fragment_vp_recommend_foot_tv1"
            android:layout_gravity="bottom|right"
            android:textSize="@dimen/fragment_recommend_vp_textSize1"
            android:layout_margin="@dimen/fragment_recommend_vp_margin1"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_vp_recommend_foot_tv2"
            android:layout_gravity="bottom|right"
            android:textSize="@dimen/fragment_recommend_vp_textSize2"
            android:layout_margin="@dimen/fragment_recommend_vp_margin2"
            android:textColor="@color/colorVpWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView
        android:id="@+id/fragment_vp_recommend_tv_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_vp_recommend_tv_sub_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>